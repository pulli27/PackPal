// BackEnd/Route/InventoryRoute.js
const express = require("express");
const {
  listInventory,
  getByBusinessId,
  createItem,
  updateByBusinessId,
  removeByBusinessId,
  summary,
  adjustReorder, // ✅
} = require("../Controllers/InventoryController");

const router = express.Router();

/* IMPORTANT: put /summary before "/:id" */
router.get("/summary", summary);

router.get("/", listInventory);
router.get("/:id", getByBusinessId);
router.post("/", createItem);
router.put("/:id", updateByBusinessId);
router.delete("/:id", removeByBusinessId);

// ✅ atomic dynamic reorder adjustment
router.post("/:id/reorder-adjust", adjustReorder);

module.exports = router;
