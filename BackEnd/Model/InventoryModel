// BackEnd/Model/InventoryModel.js
const mongoose = require("mongoose");

const InventorySchema = new mongoose.Schema(
  {
    id: { type: String, required: true, unique: true, index: true }, // business ID
    name: { type: String, required: true },
    description: { type: String, default: "" },
    quantity: { type: Number, default: 0, min: 0 },
    unitPrice: { type: Number, default: 0, min: 0 },
    avgDailyUsage: { type: Number, default: 0, min: 0 },
    leadTimeDays: { type: Number, default: 0, min: 0 }
  },
  { timestamps: true, versionKey: false }
);

InventorySchema.index({ name: "text", description: "text" });

module.exports = mongoose.model("Inventory", InventorySchema, "inventory");
