const mongoose = require("mongoose");
const Schema = mongoose.Schema;

const inventorySchema = new Schema({
    ItemId:{
        type: Number,
        required:true,//validate
    },

    ItemName:{
        type:String,
    },

    Description:{
        type:String,
    },

    Quantity:{
        type:Number,
    },

    ReOrder_Level:{
        type:Number,
    },
    Unit_Price:{
        type:Number,
    },
});

module.exports = mongoose.model(
    "InventoryItemModel", //file name
    inventorySchema  //function schema

)