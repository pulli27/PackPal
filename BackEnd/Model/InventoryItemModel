const mongoose = require("mongoose");
const Schema = mongoose.Schema;

const inventorySchema = new Schema(
  {
    ItemId: {
      type: Number,
      required: true,
      unique: true, // useful to avoid duplicates
    },
    ItemName: {
      type: String,
      required: true,
    },
    Description: {
      type: String,
      default: "",
    },
    Quantity: {
      type: Number,
      default: 0,
    },
    ReOrder_Level: {
      type: Number,
      default: 0,
    },
    Unit_Price: {
      type: Number,
      default: 0,
    },
  },
  { timestamps: true, versionKey: false }
);

// 3rd arg sets the actual Mongo collection name to 'inventories'
module.exports = mongoose.model("InventoryItemModel", inventorySchema, "inventories");
