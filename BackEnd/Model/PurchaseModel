// BackEnd/Model/PurchaseModel.js
const mongoose = require("mongoose");

const PurchaseSchema = new mongoose.Schema(
  {
    // Business-friendly ID like "O-001"
    id:        { type: String, required: true, unique: true, index: true },

    // Supplier
    supplier:  { type: String, required: true },

    // Either a free-text items list OR an array (keep flexible for legacy)
    items:     { type: mongoose.Schema.Types.Mixed, default: "" },

    // Dates
    orderDate:    { type: Date, default: Date.now },
    deliveryDate: { type: Date },

    // Workflow status
    status: {
      type: String,
      enum: ["pending", "approved", "delivered", "cancelled"],
      default: "pending",
      index: true,
    },

    // Optional priority shown in UI
    priority: { type: String, enum: ["normal", "high", "urgent"], default: "normal" },

    // Optional notes
    notes: { type: String, default: "" },

    // Optional totals for summary route compatibility
    total:      { type: Number },
    amount:     { type: Number },
    grandTotal: { type: Number },
    date:       { type: Date }, // some legacy docs may use this field
  },
  { timestamps: true, versionKey: false }
);

// Helpful text search
PurchaseSchema.index({ supplier: "text", id: "text" });

// âœ… Single guarded registration
module.exports =
  mongoose.models.Purchase ||
  mongoose.model("Purchase", PurchaseSchema, "purchases");
